{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Fetch",
            "type": "shell",
            "command": "git fetch",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOn": "interval",
            "interval": 60000 // interval in milliseconds
        }
    ]
}